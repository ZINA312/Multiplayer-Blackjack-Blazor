@page "/room"
@page "/room/{RoomId:int}"
<div class="game-room">
    <h1>Комната @RoomId</h1>
    <div class="table-container">
        <div class="dealer-container">
            <div class="dealer">Dealer</div>
            <p class="player-score">0</p>
            <div class="cards">
                <img src="/Cards/cardClubsAce.png" alt="Карта" class="card" />
                <img src="/Cards/cardClubsKing.png" alt="Карта" class="card" />
                <img src="/Cards/cardDiamondsTwo.png" alt="Карта" class="card" />
                <img src="/Cards/cardSpadesTwo.png" alt="Карта" class="card" />
            </div>
        </div>
        <div class="players-container">
            <div class="player-container">
                <div class="cards">
                    <img src="/Cards/cardBack.png" alt="Карта" class="card" />
                    <img src="/Cards/cardBack.png" alt="Карта" class="card" />
                    <img src="/Cards/cardBack.png" alt="Карта" class="card" />
                    <img src="/Cards/cardBack.png" alt="Карта" class="card" />
                </div>
                <p class="player-score">0</p>
                <div class="player">Player 1</div>
            </div>
            <div class="player-container">
                <div class="cards">
                    <img src="/Cards/cardClubsAce.png" alt="Карта" class="card" />
                    <img src="/Cards/cardClubsKing.png" alt="Карта" class="card" />
                </div>
                <p class="player-score">0</p>
                <div class="player">Your name</div>
            </div>
            <div class="player-container">
                <div class="cards">
                    <img src="/Cards/cardBack.png" alt="Карта" class="card" />
                    <img src="/Cards/cardBack.png" alt="Карта" class="card" />
                    <img src="/Cards/cardBack.png" alt="Карта" class="card" />
                </div>
                <p class="player-score">0</p>
                <div class="player">Player 3</div>
            </div>
        </div>
    </div>
    <div class="button-container">
        <button class="action-button">Hit</button>
        <button class="action-button">Stand</button>
    </div>
</div>

@code {
    [Parameter]
    public int RoomId { get; set; } = 0;
    private int roomId;

    protected override void OnParametersSet()
    {
        roomId = RoomId;
    }
}
